{
  "manifest_version": 3,
  "name": "Trace",
  "version": "1.0",
  "description": "Trace - Your browsing companion",
  "permissions": [
    "storage",
    "activeTab",
    "tabs",
    "scripting",
    "sidePanel"
  ],
  "host_permissions": [
    "http://localhost:8000/*",
    "https://api.openai.com/*",
    "https://trace-api-production.up.railway.app/*"
  ],
  "side_panel": {
    "default_path": "sidepanel.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ],
  "action": {
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  },
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  }
}